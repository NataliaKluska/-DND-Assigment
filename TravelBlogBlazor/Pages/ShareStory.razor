@page "/share-story"
@inject HttpClient Http
@using Microsoft.AspNetCore.Components.Forms
@using TravelBlogShared.Models

<h3>Share Your Travel Story</h3>

<EditForm Model="@post" OnValidSubmit="SubmitStory">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Title:</label>
        <InputText @bind-Value="post.Title" class="form-control" />
    </div>
    
    <div>
        <label>Content:</label>
        <InputTextArea @bind-Value="post.Content" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</EditForm>

@code {
    private TravelPost post = new TravelPost();

    private async Task SubmitStory()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("api/TravelPost", post);

            if (response.IsSuccessStatusCode)
            {
                Console.WriteLine("Story submitted successfully!");
                post = new TravelPost(); // Reset the form after a successful submission
            }
            else
            {
                Console.WriteLine("Failed to submit story.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"An error occurred: {ex.Message}");
        }
    }
}
